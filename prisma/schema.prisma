generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  ds_id     String   @unique
  ds_name   String
  createdAt DateTime @default(now())
  Xp        Xp?
  Timeouts  Timeouts?
}

model Xp {
  id        Int      @id @default(autoincrement())
  user_id   Int @unique
  score        Int @default(1)
  updatedAt DateTime @default(now())
  User      User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Timeouts {
  id              Int      @id @default(autoincrement())
  user_id         Int @unique
  messageTimeout  DateTime @default(now())
  reactionTimeout DateTime @default(now())
  User      User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

}
